<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardView"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:layout_marginTop="5dp"
    android:layout_marginBottom="5dp"
    app:cardUseCompatPadding="false">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="315dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/titolo2"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:textColor="@color/black"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/articolo2"
            android:layout_width="match_parent"
            android:layout_height="131dp"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/ambito2"
            android:layout_width="match_parent"
            android:layout_height="68dp"
            android:includeFontPadding="false"
            android:textSize="20sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/Creazione"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="@string/crea"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/Proprietario"
                android:layout_width="213dp"
                android:layout_height="54dp"
                android:clickable="true"
                android:focusable="true"
                android:textSize="20sp"
                tools:ignore="SpeakableTextPresentCheck,SpeakableTextPresentCheck,SpeakableTextPresentCheck,TouchTargetSizeCheck" />
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>