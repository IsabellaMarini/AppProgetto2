<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/immagine3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="-41dp">

        <EditText
            android:id="@+id/username"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="44dp"
            android:layout_marginTop="145dp"
            android:layout_marginEnd="124dp"
            android:layout_marginBottom="526dp"
            android:hint="@string/username" />

        <EditText
            android:id="@+id/email2"
            android:layout_width="234dp"
            android:layout_height="73dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="210dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="448dp"
            android:ems="10"
            android:hint="@string/email2"
            android:inputType="textEmailAddress"
            android:minHeight="48dp" />

        <EditText
            android:id="@+id/password2"
            android:layout_width="230dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginTop="290dp"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="374dp"
            android:ems="10"
            android:hint="@string/password"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/Data"
            android:layout_width="wrap_content"
            android:layout_height="62dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="168dp"
            android:layout_marginBottom="211dp"
            android:ems="10"
            android:hint="@string/Data"
            android:inputType="date"
            android:minHeight="48dp" />

        <Button
            android:id="@+id/Registrati2"
            android:layout_width="135dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="52dp"
            android:layout_marginTop="549dp"
            android:layout_marginEnd="223dp"
            android:layout_marginBottom="120dp"
            android:backgroundTint="@color/verde"
            android:text="Registrati" />

        <EditText
            android:id="@+id/password3"
            android:layout_width="231dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/Data"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="45dp"
            android:layout_marginTop="372dp"
            android:layout_marginEnd="135dp"
            android:layout_marginBottom="81dp"
            android:ems="10"
            android:hint="@string/conferma"
            android:inputType="textPassword" />

        <EditText
            android:id="@+id/Nome"
            android:layout_width="226dp"
            android:layout_height="61dp"
            android:layout_alignBottom="@+id/username"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="139dp"
            android:layout_marginBottom="138dp"
            android:ems="10"
            android:hint="@string/nome"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/Cognome"
            android:layout_width="234dp"
            android:layout_height="69dp"
            android:layout_alignBottom="@+id/username"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="133dp"
            android:layout_marginBottom="66dp"
            android:ems="10"
            android:hint="@string/cognome"
            android:inputType="textPersonName" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>